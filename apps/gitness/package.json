{
  "name": "gitness",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "run-p watch:css watch",
    "watch": "vite",
    "watch:css": "pnpm build:css --watch",
    "build": "pnpm build:css && vite build",
    "build:css": "npx tailwindcss -i ./src/styles.css -o ./public/styles.css",
    "lint": "eslint ./src",
    "pretty": "prettier --check ./src",
    "preview": "vite preview",
    "preinstall": "npx only-allow pnpm",
    "pre-commit": "lint-staged",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@harnessio/canary": "workspace:*",
    "@harnessio/code-service-client": "3.2.0",
    "@harnessio/forms": "workspace:*",
    "@harnessio/ui": "workspace:*",
    "@harnessio/unified-pipeline": "workspace:*",
    "@harnessio/views": "workspace:*",
    "@harnessio/yaml-editor": "workspace:*",
    "@hookform/resolvers": "^3.6.0",
    "@tanstack/react-query": "4.36.1",
    "clipboard-copy": "^3.1.0",
    "clsx": "^2.1.1",
    "diff2html": "3.4.22",
    "event-source-polyfill": "^1.0.22",
    "jotai": "^2.6.3",
    "lang-map": "^0.4.0",
    "lodash-es": "^4.17.21",
    "monaco-editor": "0.50.0",
    "npm-run-all": "^4.1.5",
    "nuqs": "^2.0.4",
    "pluralize": "^8.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "yaml": "^2.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^13.4.0",
    "@types/event-source-polyfill": "^1.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/pluralize": "^0.0.33",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "prettier": "^3.0.3",
    "react-router-dom": "^6.26.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vitest": "^2.1.2",
    "zustand": "^4.5.4",
    "immer": "^10.1.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint ./src --fix",
      "prettier ./src --write"
    ]
  }
}
